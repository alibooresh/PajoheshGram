    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_chats">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.pajoheshgram.ui.home.HomeFragment"
        android:label="@string/menu_add_account"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/nav_chats"
        android:name="com.example.pajoheshgram.ui.chats.ChatsFragment"
